{
  "include": ["src/**/*"],
  "exclude": ["src/database/db/*", "src/**/__tests__/*"],
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "moduleResolution": "Node",
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "composite": true,
    "tsBuildInfoFile": "dist/.tsbuildinfo",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
  }
}
